@model LodyCreateView


<div><h3>Dodaj nowy smak loda!</h3></div>

<div class="text-warning" asp-validation-summary="All"></div>
<form enctype="multipart/form-data" asp-controller="Edycja" asp-action="DodawanieSmaku" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="SmakNazwa" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SmakNazwa" class="form-control" placeholder="Nazwa smaku">
            <span class="text-warning" asp-validation-for="SmakNazwa"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SmakOpis" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SmakOpis" class="form-control" placeholder="Dodaj opis">
            <span class="text-warning" asp-validation-for="SmakOpis"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="SmakAlkohol" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="SmakAlkohol" class="custom-select mr-sm-2">
                <option selected="selected" value="1">TAK</option>
                <option selected="selected" value="0">NIE</option>
            </select>
            <span class="text-warning" asp-validation-for="SmakAlkohol"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="SmakDostepny" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="SmakDostepny" class="custom-select mr-sm-2">
                <option selected="selected" value="1">TAK</option>
                <option selected="selected" value="0">NIE</option>
            </select>
            <span class="text-warning" asp-validation-for="SmakDostepny"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="SciezkaZdjecia" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="SciezkaZdjecia" class="form-control custom-file-input">
                <label class="custom-file-label">Wybierz zdjęcie...</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="kategoriaLoda" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="kategoriaLoda" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<KategoriaLoda>()">

            </select>
            <span class="text-warning" asp-validation-for="SmakDostepny"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </div>
    </div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>